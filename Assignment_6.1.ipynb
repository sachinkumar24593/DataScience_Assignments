   "source": [
    "import numpy as np\n",
    "def vandermonde(input_arr):\n",
    "    val = len(input_arr)\n",
    "    out_arr = np.column_stack([input_arr**(val-1-i) for i in range(val)])\n",
    "    return out_arr\n",
    "\n",
    "arr = vandermonde(np.array([1,2,3,4]))\n",
    "print(arr)"
   ]
